<body>
    <%- include('navbar') %>
        <div>
            <div class="hero section" style="background-color: rgba(246, 246, 246, 1); ">
                <div class="img">
                    <img class="brides" src="/imgs/bride.jpg" alt="">

                </div>
                <div>
                    <img class="handholding" src="/imgs/hand.jpg" alt="">

                </div>


            </div>
            <div class="text">
                <h2>Creating special moments</h2>
                <h4>Start a new journey with us. </h4>

            </div>

            <div class="reviews section">


                <h2 class="section-title">What people <span>Think About Us</span></h2>
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <% if (!all_comments || all_comments.length===0) { %>
                            <div class="review-card">
                                <p>No comment</p>
                            </div>
                            <% } else { %>
                                <% all_comments.forEach(review=> { %>
                                    <div class="swiper-slide">
                                        <div class="review-card">
                                            <!-- <div class="stars">★★★★★</div> -->
                                            <p>
                                                <%= review.comment||"No Comment" %>
                                            </p>
                                            <div class="review-footer">
                                                 <img src="<%=review.profile_pic?"/uploads/"+review.profile_pic :'/imgs/default-avatar.jpg '%>"
                                                    class="avatar">
                                                <div>
                                                    <h4 class="name">
                                                        <%=review.name%>
                                                    </h4>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>
                    </div>
                </div>
                <form action="/more_reviews" method="get">
                    <input type="submit" value="View all" class="view_all">

                </form>


            </div>

        </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

        <script>
            var swiper = new Swiper(".mySwiper", {
                loop: true,
                autoplay: {
                    delay: 0,
                    disableOnInteraction: false,
                },
                speed: 4000,
                slidesPerView: 3,
                spaceBetween: 30,
                allowTouchMove: false,
                simulateTouch: false,
                grabCursor: false,
                freeMode: false,
                freeModeMomentum: false,
            
            });



        </script>
</body>

