        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

        .section-title span {
            color: #f74d4d;
            border-bottom: 2px solid #f74d4d;
        }

        .review-card {
            background: white;
            display:flex;
            flex-direction: column;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            position: relative;
            max-height: 250px;
            min-height: 230px;
            ;
            width: 40vh;
            margin-top: 30px;
            margin-left: 8px;
            justify-content:space-between;
           
        }

        .stars {
            color: gold;
            font-size: 1.2rem;
        }

        .review-footer {
            display: flex;
            
           position:relative;
           
            z-index: 1;
            gap:10px;
            align-items:flex-end;
        }

        .avatar {
            width: 60px;
            max-height: 60px;
            border-radius: 50%;
           
           
        }
        

        .review-date {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 0.8rem;
            color: #888;
        }

        .view_all {
            background-color: #f65a5b;
            /* similar to the red in your image */
            color: white;
            border: none;
            border-radius: 999px;
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
            position: relative;
            display: flex;
            justify-content: center;

            margin: 0 auto;
        }

        .view_all:hover {
            background-color: #e04a4b;
            /* darker shade for hover */
        }

        
